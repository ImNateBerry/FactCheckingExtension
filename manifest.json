{
    "manifest_version": 3,
    "name": "Fact Checker",
    "version": "1.0",
    "description": "Fact-check highlighted text on the web.",
    "action": {
        "default_popup": "sidepanel.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "nativeMessaging",
        "sidePanel",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ],
            "css": [
                "scripts/content.css"
            ]
        }
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    }
}